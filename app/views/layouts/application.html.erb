<!DOCTYPE html>
<html>
  <head>
    <title>iStreetWatch - report racism and xenophobia</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="We track racist and xenophobic harassment in public spaces around the UK." />

    <% if content_for?(:fb_head) %>
      <%= yield(:fb_head) %>
    <% end %>

  </head>

  <body>
    <nav>
      <%= link_to 'iStreetWatch', root_path, class: 'brand-logo' %>
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>

      <ul class='right hide-on-med-and-down'>
        <li><%= link_to "Map", root_path %></li>
        <li><%= link_to "Timeline", timeline_reports_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Report Incident", new_report_path, class: 'report' %></li>
      </ul>

      <ul id='slide-out' class='side-nav'>
        <li><%= link_to "Map", root_path %></li>
        <li><%= link_to "Timeline", timeline_reports_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Report Incident", new_report_path, class: 'report' %></li>
      </ul>
    </nav>

    <%= javascript_include_tag 'application' %>

    <div class='content'>
      <%= yield %>
    </div>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Have you taken our pledge?</h5>
            <button class="btn actions waves-effect waves-light">Pledge</button>
          </div>
          <div class="col l4 offset-l2 s12">
            <h5 class="white-text">Share</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6&appId=1150495698327638";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <script>window.twttr = (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0],
        t = window.twttr || {};
      if (d.getElementById(id)) return t;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js, fjs);

      t._e = [];
      t.ready = function(f) {
        t._e.push(f);
      };

      return t;
    }(document, "script", "twitter-wjs"));</script>
  </body>
</html>

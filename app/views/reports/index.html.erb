<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Lat</th>
      <th>Lng</th>
      <th>Time</th>
      <th>Address</th>
      <th>Town</th>
      <th>Description</th>
      <th>Summary</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.lat %></td>
        <td><%= report.lng %></td>
        <td><%= report.time %></td>
        <td><%= report.address %></td>
        <td><%= report.town %></td>
        <td><%= report.description %></td>
        <td><%= report.summary %></td>
        <td><%= report.approved %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />


<%= form_for(Report.new, id: 'report-form') do |f| %>
  <div class="field">
    <%= f.label :time %>
    <%= f.datetime_select :time %>
  </div>

  <div class="field">
    <%= text_field_tag 'map_address_finder', nil, id: 'autocomplete' %>
  </div>

    <div class="field">
    <%= f.label :house %>
    <%= f.text_field :house%>
  </div>

  <div class="field">
    <%= f.label :town %>
    <%= f.text_field :town %>
  </div>

  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :region %>
    <%= f.text_field :region %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :summary %>
    <%= f.text_field :summary %>
  </div>

    <div class="field">
      <%= f.text_field :lng %>
      <%= f.text_field :lat %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
